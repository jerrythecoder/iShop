<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	
	<view-state id="addCustomerProfile" view="customer/customer-profile-form" model="customer">
		<on-entry>
			<evaluate expression="userService.getOrCreateCustomer(currentUser.name)" 
					result="viewScope.customer"/>
		</on-entry>
		<transition on="submit" to="addCustomerAddress">
			<evaluate expression="userService.bindCustomer(currentUser.name, customer)"/>
		</transition>
	</view-state>
	
	<subflow-state id="addCustomerAddress" subflow="customer/address-form">
		<transition on="addressesAdded" to="welcomeNewCustomer"/>
	</subflow-state>
	
	<view-state id="welcomeNewCustomer" view="customer/new-customer-welcome-page">
		<on-entry>
			<evaluate expression="userService.getCustomer(currentUser.name)" result="viewScope.customer"/>
		</on-entry>
		<transition on="goCustomerHome" to="goCustomerHome"/>
		<transition on="goShopping" to="goShopping"/>
	</view-state>
	
	<end-state id="goCustomerHome" view="externalRedirect:/customer/home"/>
	<end-state id="goShopping" view="externalRedirect:/product/list"/>
</flow>